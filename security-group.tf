resource "aws_security_group" "tf_demo_sg" {
  name   = "${var.app_name}_security_group"
  vpc_id = aws_vpc.tf_demo_vpc.id

  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }

  ingress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }
}
